    font-weight: 400;
}

.text-button {
    font-size: 28rpx;
    letter-spacing: 1.5rpx;
    font-weight: 500;
}

.text-caption {
    font-size: 24rpx;
    letter-spacing: 0.8rpx;
    font-weight: 400;
}

.text-overline {
    font-size: 20rpx;
    letter-spacing: 3rpx;
