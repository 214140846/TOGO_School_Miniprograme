    font-size: 182rpx;
    letter-spacing: -3rpx;
    font-weight: 300;
}

.text-2 {
    font-size: 120rpx;
    letter-spacing: -1rpx;
    font-weight: 300;
}

.text-3 {
    font-size: 96rpx;
