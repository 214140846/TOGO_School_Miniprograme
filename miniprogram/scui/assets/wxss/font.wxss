}

.text-secondary{
    color: rgba(0, 0, 0, .54);
}

.text-disabled {
    color: rgba(0, 0, 0, .38);
}

.icon-disabled {
    color: rgba(0, 0, 0, .26);
}

.text-driver{
    width: 100%;
    border-bottom: 1px solid rgba(0,0,0,.26);
    display: block;
    color: rgba(0, 0, 0, .12);
}

.text-bolder{
    font-weight: bolder;
}